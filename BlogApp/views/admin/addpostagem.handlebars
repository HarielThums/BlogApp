{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Nova postagem: </h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="">Slug: </label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descrição">Descrição: </label>
            <input type="text" name="descrição" class="form-control" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" id="" cols="30" rows="10" class="form-control" required></textarea>
            <label for="categoria" class="mt-4">Categoria: </label>
            <select name="categoria" class="form-select form-select-lg mb-3" required>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Criar postagem </button>
        </form>
    </div>
</div>

{{!-- Script para alerta de erros --}}
<script>
    let alerta = document.getElementsByClassName('alert')[0]

    if(alerta) {
        setTimeout(() => {
            alerta.style.display = 'none';
        }, 3000)
    }
</script>